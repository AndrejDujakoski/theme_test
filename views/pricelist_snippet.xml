<odoo>
    <template id="pricelist_snippet" name="Pricelist Snippet">
        <section class="pricelist_snippet oe_custom_bg pt48 pb32 oe_img_bg o_colored_level">
            <div class="container">
                <h2>Menu</h2>
                <p>Add a menu description.</p>
                <div class="row">
                    <div class="col-lg-6 pt16 pb16 o_colored_level">
                        <h3>Starter</h3>
                        <ul class="list-unstyled my-3">
                            <li class="s_product_catalog_dish" data-name="Product">
                                <p class="s_product_catalog_dish_title d-flex align-items-baseline pb-2">
                                    <span class="s_product_catalog_dish_name o_default_snippet_text">Cheese Onion Rings</span>
                                    <span class="s_product_catalog_dish_price ml-auto pl-2 o_default_snippet_text">$9.00</span>
                                </p>
                                <p class="s_product_catalog_dish_description border-top text-muted pt-1"><i>Add a description here</i></p>
                            </li>
                            <li class="s_product_catalog_dish" data-name="Product">
                                <p class="s_product_catalog_dish_title d-flex align-items-baseline pb-2">
                                    <span class="s_product_catalog_dish_name o_default_snippet_text">Chefs Fresh Soup of the Day</span>
                                    <span class="s_product_catalog_dish_price ml-auto pl-2 o_default_snippet_text">$7.50</span>
                                </p>
                                <p class="s_product_catalog_dish_description border-top text-muted pt-1"><i>Add a description here</i></p>
                            </li>
                            <li class="s_product_catalog_dish" data-name="Product">
                                <p class="s_product_catalog_dish_title d-flex align-items-baseline pb-2">
                                    <span class="s_product_catalog_dish_name o_default_snippet_text">Beef Carpaccio</span>
                                    <span class="s_product_catalog_dish_price ml-auto pl-2 o_default_snippet_text">$10.50</span>
                                </p>
                                <p class="s_product_catalog_dish_description border-top text-muted pt-1"><i>Add a description here</i></p>
                            </li>
                        </ul>
                    </div>
                    <div class="col-lg-6 pt16 pb16 o_colored_level">
                        <h3>Main Course</h3>
                        <ul class="list-unstyled my-3">
                            <li class="s_product_catalog_dish" data-name="Product">
                                <p class="s_product_catalog_dish_title d-flex align-items-baseline pb-2">
                                    <span class="s_product_catalog_dish_name o_default_snippet_text">Filet Mignon 8oz</span>
                                    <span class="s_product_catalog_dish_price ml-auto pl-2 o_default_snippet_text">$15.50</span>
                                </p>
                                <p class="s_product_catalog_dish_description border-top text-muted pt-1"><i>Add a description here</i></p>
                            </li>
                            <li class="s_product_catalog_dish" data-name="Product">
                                <p class="s_product_catalog_dish_title d-flex align-items-baseline pb-2">
                                    <span class="s_product_catalog_dish_name o_default_snippet_text">Farm Friendly Chicken Supreme</span>
                                    <span class="s_product_catalog_dish_price ml-auto pl-2 o_default_snippet_text">$15.50</span>
                                </p>
                                <p class="s_product_catalog_dish_description border-top text-muted pt-1"><i>Add a description here</i></p>
                            </li>
                            <li class="s_product_catalog_dish" data-name="Product">
                                <p class="s_product_catalog_dish_title d-flex align-items-baseline pb-2">
                                    <span class="s_product_catalog_dish_name o_default_snippet_text">Tuna and Salmon Burger</span>
                                    <span class="s_product_catalog_dish_price ml-auto pl-2 o_default_snippet_text">$12.00</span>
                                </p>
                                <p class="s_product_catalog_dish_description border-top text-muted pt-1"><i>Add a description here</i></p>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </section>
    </template>
    <template id="insert_pricelist_in_bar" inherit_id="website.snippets" name="Insert price list into bar">
        <xpath expr="//div[@id='snippet_feature']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_test.pricelist_snippet"
                    t-thumbnail="/website/static/src/img/snippets_thumbs/s_product_catalog.svg"/>
        </xpath>
    </template>
</odoo>
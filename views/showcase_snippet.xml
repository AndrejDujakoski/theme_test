<odoo>
    <template id="showcase_snippet" name="Showcase Snippet">
        <section class="showcase_snippet pt48 pb48 o_colored_level">
            <div class="container">
                <div class="row no-gutters s_col_no_resize s_col_no_bgcolor s_nb_column_fixed">
                    <div class="col-lg text-lg-right">
                        <div class="row">
                            <div class="col-lg-12 pt24 pb24 o_colored_level">
                                <div class="s_showcase_title d-flex flex-lg-row-reverse mb-2">
                                    <i class="s_showcase_icon fa fa-2x fa-desktop  mr-3 mr-lg-0 ml-lg-3"/>
                                    <h3 class="o_default_snippet_text">First feature</h3>
                                </div>
                                <p class="o_default_snippet_text">A short description of this great feature.</p>
                            </div>
                            <div class="col-lg-12 pt24 pb24 o_colored_level">
                                <div class="s_showcase_title d-flex flex-lg-row-reverse mb-2">
                                    <i class="s_showcase_icon fa fa-2x fa-paint-brush  mr-3 mr-lg-0 ml-lg-3"/>
                                    <h3 class="o_default_snippet_text">Second feature</h3>
                                </div>
                                <p class="o_default_snippet_text">A short description of this great feature.</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-1">
                        <div class="w-50 h-100 border-right"/>
                    </div>
                    <div class="col-lg">
                        <div class="row">
                            <div class="col-lg-12 pt24 pb24 o_colored_level">
                                <div class="s_showcase_title d-flex mb-2">
                                    <i class="s_showcase_icon fa fa-2x fa-heart  mr-3"/>
                                    <h3 class="o_default_snippet_text">Another feature</h3>
                                </div>
                                <p class="o_default_snippet_text">A short description of this great feature.</p>
                            </div>
                            <div class="col-lg-12 pt24 pb24 o_colored_level">
                                <div class="s_showcase_title d-flex mb-2">
                                    <i class="s_showcase_icon fa fa-2x fa-gift  mr-3"/>
                                    <h3 class="o_default_snippet_text">Last Feature</h3>
                                </div>
                                <p class="o_default_snippet_text">A short description of this great feature.</p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="container text-lg-center">
                <p><br></br></p>
                <a href="#" class="btn btn-primary mb-2 o_default_snippet_text">Discover all the features</a>
            </div>
        </section>
    </template>
    <template id="place_showcase_into_bar" inherit_id="website.snippets" name="Place showcase into bar">
        <xpath expr="//div[@id='snippet_structure']/div[hasclass('o_panel_body')]" position="inside">
            <t t-snippet="theme_test.showcase_snippet"
                    t-thumbnail="/website/static/src/img/snippets_thumbs/s_showcase.svg"/>
        </xpath>
    </template>
</odoo>
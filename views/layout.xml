<!--document used for extending the header of the page-->
<!--will add Welcome in out website in the header-->

<odoo>
  <template id="custom_message" inherit_id="website.layout" name="Custom Header">
    <!-- Add an element after the top menu  -->
    <xpath expr="//div[@id='wrapwrap']/header" position="before">
      <div class="container">
        <div class="alert alert-info mt16" role="alert">
          <strong>Welcome</strong> in our website!
        </div>
      </div>
    </xpath>
  </template>
</odoo>